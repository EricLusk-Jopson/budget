{
  "extends": "../../tools/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "module": "ES2020", // ← Change this from "commonjs"
    "target": "ES2020", // ← Add this for consistency
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "tests", "**/*.test.*"]
}
